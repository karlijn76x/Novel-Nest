@model ReviewNightstandBookViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">

    <link rel="stylesheet" type="text/css" href="~/css/EditNightstandBook.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <title>Novel Nest</title>
</head>

<body>
    <h1>@Model.Title</h1>
    <p>Give your book a finished date, a rating or review!</p>

    <form class="reviewForm" method="post" asp-action="ReviewNightstandBook">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <input type="hidden" name="BookId" value="@Model.BookId" />
        <div>
            <label for="DateFinished">Date Finished:</label>
            <input type="date" id="DateFinished" name="DateFinished" value="@Model.DateFinished?.ToString("yyyy-MM-dd")" />
        </div>
        <div>
            <label for="Rating">Rating:</label>
            <select id="Rating" name="Rating">
                <option value="">Select a rating</option>
                @for (int i = 1; i <= 5; i++)
                {
                    if (Model.Rating == i)
                    {
                        <option value="@i" selected>@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }
                }

            </select>
        </div>
        <div>
            <label for="Review">Review:</label>
            <textarea id="Review" name="Review" rows="4" cols="50">@Model.Review</textarea>
        </div>
        <button class="save-btn" type="submit">Save</button>
    </form>

</body>
</html>
