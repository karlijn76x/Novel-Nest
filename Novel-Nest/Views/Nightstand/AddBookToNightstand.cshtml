@using Models
@model SpecifyBookDetailsViewModel

<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">


	<link rel="stylesheet" type="" href="~/css/AddBookToNightstand.css" />
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<title>Novel Nest</title>
</head>
<body>
	<h1>Choose a book to add to your nightstand!</h1>
	<p>When you add a book to your nightstand, you can pick a starting date, when you finish a book you can set a date aswell.</p>
	@foreach (var books in Model.Books)
	{
		<div class="books">
			<div class="book-title">@books.Title <br /> @books.Author</div>  @books.CategoryName <input class="btn" type="button" value="Choose" onclick="location.href='@Url.Action("AddBookToNightstand", "Nightstand")'" />
		</div>
	}


</body>
</html>
