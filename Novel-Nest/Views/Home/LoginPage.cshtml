<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
	<link rel="stylesheet" type="" href="~/css/Login.css" />
	<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<title>Novel Nest</title>
</head>
<body>
	<title>Login</title>
	<div class="container">
		
	<p class="title">Login with your account</p>
		<form method="post" action="@Url.Action("Login", "Account")">
		<div class="login-field">
			<input type="text" placeholder="Fill in your emailadress" name="email" required />
			<input type="password" placeholder="Fill in your password" name="password" required />
			<br>
			@* <p>Forgot your password? Click <a href="@Url.Action("PasswordReset", "Home")">here</a> to request a new password.</p> *@

			<button type="submit">Login</button>
		</div>
	</form>
	<p class="title">Create your new account!</p>
		<form method="post" action="@Url.Action("CreateAccount", "Account")">
			<div class="create-field">
				<input type="text" placeholder="Fill in your name" name="Name" required />

				<input type="text" placeholder="Fill in your age" name="Age" required />

				<input type="text" placeholder="Fill in your emailadress" name="Email" required />

				<input type="password" placeholder="Fill in your password" name="Password" required />

			</div>
			<button type="submit">Create Account</button>
	</form>

	</div>
	<script>
		$(document).ready(function () {
			var accountCreated = '@TempData["AccountCreated"]';
			if (accountCreated) {
				Swal.fire({
					title: 'Success!',
					text: accountCreated,
					icon: 'success',
					confirmButtonText: 'OK'
				});
			}
		});
	</script>
</body>
</html>